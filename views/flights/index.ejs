<%- include('../partials/header')%>
<h1> Flight List</h1>
<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>FlightNo</th>
      <th>Departure Date/Time</th>
    </tr>
  </thead>
  <tbody>
      <!-- Write the line of EJS to iterate over movies using forEach -->
      <!-- we're getting flights from controller/flights/allFlights(index) -->
      <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.depart %></td>
          <td>
            <form 
              action='/flights/<%= f.id %>?_method=DELETE' 
              method='POST'
              >
                <button type='submit'>DELETE</button>
            </form>
          </td>
          <td>
            <a href="/flights/<%=f.id%>"> Details</a>
          </td>
        </tr>
        <% }); %>
      <!-- Close the forEach using EJS here -->
    </tbody>
  </table>

<%- include('../partials/footer')%>