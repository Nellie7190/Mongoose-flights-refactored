<%- include('../partials/header')%>
<h2>Enter a Flight</h2>
<form id='add-flight' action="/flights" method="POST">
    <label>Airline:
        <!-- option below is a text(string) input for airline-->
        <!-- <input type="text" name="airline"> -->
        <select type="text" name="airline">
            <!-- below is a default message in selector -->
            <!-- <option>Select an airline</option> -->
            <option style="display:none">
            <option value="American">American</option>
            <option value="Delta">Delta</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
        </select>
    </label><br>
    <label>Airport:
        <select type="text" name="airport">
            <option value="AUS">AUS</option>
            <option value="DEN" selected>DEN</option>
            <option value="DFW">DFW</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option> 
        </select>
    </label></br>
    <label>
        FlightNo:
        <input type="number" name="flightNo" min="10" max="9999">
    </label></br>
    <label>
        Departs:
        <input type="datetime-local" name="depart" value="2023-08-20T12:00">
    </label></br>
    <input type="submit" value="Add Flight">
</form>
<%- include('../partials/footer')%>